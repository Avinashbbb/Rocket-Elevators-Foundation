<div class = "container">
  <div class = "row">
    <div class = "col">
      <div>
        <label>Please select the customer from below.</label>
          <select id = "selectedCustomer">
              <%customerNames = @customers.map { |c| c.fullName}%>
              <option value ="N/A">--Select--</option>
              <%for i in 0..customerNames.count%>
              <option ><%=customerNames[i]%></option>
              <%end%>
          </select>
      </div>

      <div>
        <label>Please select the building of the customer.</label>
          <select id = "selectedBuilding" >
            <option value ="N/A">--Select--</option>
            <option value = 0 >N/A</option>
          </select>
      </div>

      <div>
      <label>Please select the battery of the building.</label>
          <select id = "selectedBattery">
            <option value ="N/A" >--Select--</option>
            <option value = 0 >N/A</option>
          </select>
      </div>

      <div>
      <label>Please select the column of the battery.</label>
          <select id = "selectedColumn">
            <option value ="N/A" >--Select--</option>
            <option value = 0 >N/A</option>
          </select>
      </div>

      <div>
        <label>Please select the elevator of the column.</label>
        <select id = "selectedElevator">
        <option value ="N/A">--Select--</option>
        <option value = 0 >N/A</option>
        </select>
      </div>

      <div>
      <label>Please select the employee incharge</label>
      <select id = 'employee'>
      </select>
      </div>

      <div>
        <label>Description<label>
        <textarea type = "text", id ="description" rows="5" cols="50"></textarea>
      </div>

      <div id = 'submit'>
      <button type = 'button', class = 'btn btn-primary' >Submit</button>
      </div>
    </div> 

      
  </div>
</div>



  

  


  











